<?xml version="1.0" encoding="utf-8"?>
<!--
  Warning: Don't mess w/ these unless you know what you're doing!
  
  This file controls the arguments BRC sends to blender and ffmpeg, the "{ N# }" fields will be filled by the 
  program and should not be changed.  
  
  For changes to take effect, restart BRC.
-->

<argformats>
  <!-- ref: https://ffmpeg.org/ffmpeg-all.html#concat-1 -->
  <format for="concat">
    <!--0=ChunkTxtPath, 1=optional duration, 2=output path-->
    <text name="noMixdown">-f concat -safe 0 -i "{0}" -c copy {1} "{2}" -y</text>
    <!--0=ChunkTxtPath, 1=MixdownFile, 2=optional duration, 3=output path-->
    <text name="withMixdown">-f concat -safe 0 -i "{0}" -i "{1}" -c copy -map 0:v:0 -map 1:a:0 {2} "{3}" -y</text>
  </format>
  
  <format for="getinfo">
    <!--0=Blend file, 1=get_project_info.py-->
    <text name="main">-b "{0}" -P "{1}"</text>
  </format>

  <format for="mixdown">
    <!--0=Blend file, 1=start frame, 2=end frame, 3=mixdown_audio.py, 4=Output Folder-->
    <text name="main">-b "{0}" -s {1} -e {2} -P "{3}" -- "{4}"</text>
  </format>

  <format for="render">
    <!--0=Blend file, 1=output, 2=Renderer, 3=Frame start, 4=Frame end-->
    <text name="main">-b "{0}" -o "{1}" -E {2} -s {3} -e {4} -a</text>
  </format>

</argformats>